---
import coreTechnologies from '../content/core-technologies.json';
import toolsPlatforms from '../content/tools-platforms.json';
import experience from '../content/experience.json';
import { useTranslations } from '../utils/translate';

const t = useTranslations(Astro);

const tabs = [
  { key: 'skills', label: t('about.tabs.skills') },
  { key: 'experience', label: t('about.tabs.experience') },
  { key: 'interests', label: t('about.tabs.interests') },
];
const activeTabKey = 'skills';
---

<section id="about" aria-labelledby="about-title" class="fade-section bg-black pt-20 text-white">
  <div class="container mx-auto px-6">
    <div class="mb-8 mt-4 flex flex-col gap-3">
      <h2
        id="about-title"
        class="text-3xl font-extrabold text-green-400 drop-shadow-[0_0_16px_#00FF80] sm:text-4xl md:text-5xl"
      >
        {t('about.title')}
      </h2>
      <p class="max-w-3xl text-base text-gray-300 sm:text-lg md:text-xl">
        {t('about.description')}
      </p>
    </div>

    <!-- Tabs -->
    <div class="mb-10 flex gap-4 overflow-x-auto border-b border-green-800">
      {
        tabs.map(tab => (
          <button
            data-tab={tab.key}
            class={`px-3 pb-2 text-xs font-semibold tracking-wide transition md:text-base ${
              tab.key === activeTabKey
                ? 'border-b-2 border-green-400 text-green-400'
                : 'text-gray-400 hover:text-green-300'
            }`}
          >
            {tab.label}
          </button>
        ))
      }
    </div>

    <!-- Tab Panels -->
    <div id="tab-content" class="space-y-6">
      <!-- Default: Skills -->
      <div id="skills-panel" class="panel-fade">
        <!-- Core Technologies -->
        <div>
          <h3 class="mb-4 text-xl font-bold text-white md:text-2xl">
            {t('about.coreTechnologies')}
          </h3>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(180px,1fr))] gap-4">
            {
              coreTechnologies.map(tech => (
                <div class="flex flex-col gap-2 rounded-lg border border-green-800 bg-green-900/10 p-3 transition-all hover:border-green-500 hover:bg-green-800/10 md:p-4">
                  <div class="text-xl text-green-400 md:text-2xl">
                    <span class="material-symbols-outlined">{tech.icon}</span>
                  </div>
                  <div>
                    <h4 class="text-sm font-bold text-white md:text-base">{tech.title}</h4>
                    <p class="text-xs text-gray-400 md:text-sm">{tech.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Tools & Platforms -->
        <div>
          <h3 class="my-4 text-xl font-bold text-white md:text-2xl">{t('about.toolsPlatforms')}</h3>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(180px,1fr))] gap-4">
            {
              toolsPlatforms.map(tool => (
                <div class="flex flex-col gap-2 rounded-lg border border-green-800 bg-green-900/10 p-3 transition-all hover:border-green-500 hover:bg-green-800/10 md:p-4">
                  <div class="text-xl text-green-400 md:text-2xl">
                    <span class="material-symbols-outlined">{tool.icon}</span>
                  </div>
                  <div>
                    <h4 class="text-sm font-bold text-white md:text-base">{tool.title}</h4>
                    <p class="text-xs text-gray-400 md:text-sm">{tool.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Placeholder for other tabs -->
      <!-- Refactored for better mobile readability: smaller fonts, improved spacing, and better hierarchy -->
      <div id="experience-panel" class="panel-fade hidden">
        <ul
          class="relative space-y-3 border-l border-green-500/30 pl-4 text-sm text-gray-300 sm:text-base md:text-lg"
        >
          {
            experience.map(item => (
              <li class="relative border-b border-green-900/30 pb-3 last:border-none">
                <span class="absolute -left-[9px] top-2 size-2.5 rounded-full bg-green-400 shadow-[0_0_6px_#00FF80]" />
                <div class="ml-2 flex flex-col sm:flex-row sm:items-center sm:justify-between">
                  <strong class="text-sm font-semibold leading-snug md:text-lg">{item.role}</strong>
                  <span class="mt-0.5 hidden text-xs text-gray-400 sm:mt-0 md:inline md:text-sm">
                    ({item.period})
                  </span>
                </div>
                <p class="ml-2 mt-1 text-xs leading-relaxed text-gray-400 md:text-base">
                  {item.description}
                </p>
              </li>
            ))
          }
        </ul>
      </div>

      <div id="interests-panel" class="panel-fade hidden">
        <p class="text-gray-300">{t('about.interestsText')}</p>
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div
    class="absolute left-0 top-0 h-[2px] w-full bg-gradient-to-r from-transparent via-green-500 to-transparent opacity-40"
  >
  </div>

  <!-- Interactivity Script -->
  <script is:inline>
    const tabButtons = document.querySelectorAll('[data-tab]');
    const panels = {
      skills: document.getElementById('skills-panel'),
      experience: document.getElementById('experience-panel'),
      interests: document.getElementById('interests-panel'),
    };

    // Restore from localStorage with fallback
    let activeTab = localStorage.getItem('activeAboutTab') || 'skills';

    // Validate that the stored tab exists, otherwise default to 'skills'
    if (!panels[activeTab]) {
      activeTab = 'skills';
    }

    updateTabs(activeTab);

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedTab = button.getAttribute('data-tab');
        if (selectedTab === activeTab) return;

        activeTab = selectedTab;
        localStorage.setItem('activeAboutTab', activeTab);
        updateTabs(activeTab);
      });
    });

    function updateTabs(tab) {
      tabButtons.forEach(btn => {
        const isActive = btn.getAttribute('data-tab') === tab;
        btn.classList.toggle('text-green-400', isActive);
        btn.classList.toggle('text-gray-400', !isActive);
        btn.classList.toggle('border-b-2', isActive);
        btn.classList.toggle('border-green-400', isActive);
      });

      Object.entries(panels).forEach(([name, panel]) => {
        if (!panel) return;
        panel.classList.toggle('hidden', name !== tab);
        if (name === tab) {
          panel.classList.add('panel-fade');
          // reset animation each time
          panel.style.animation = 'none';
          panel.offsetHeight; // force reflow
          panel.style.animation = null;
        }
      });
    }
  </script>
</section>

<style is:global>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .panel-fade {
    animation: fade-in 0.6s ease-out both;
  }
</style>
