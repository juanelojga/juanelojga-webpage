---
import coreTechnologies from '../content/core-technologies.json';
import toolsPlatforms from '../content/tools-platforms.json';
import experience from '../content/experience.json';
import interests from '../content/interests.json';
import { useTranslations } from '../utils/translate';

const t = useTranslations(Astro);

const tabs = [t('about.tabs.skills'), t('about.tabs.experience'), t('about.tabs.interests')];
const activeTab = t('about.tabs.skills');
---

<section id="about" aria-labelledby="about-title" class="fade-section bg-black text-white">
  <div class="container mx-auto px-6">
    <div class="mb-12 mt-4 flex flex-col gap-3">
      <h2
        id="about-title"
        class="text-4xl font-extrabold text-green-400 drop-shadow-[0_0_16px_#00FF80] sm:text-5xl"
      >
        {t('about.title')}
      </h2>
      <p class="max-w-3xl text-lg text-gray-300 sm:text-xl">
        {t('about.description')}
      </p>
    </div>

    <!-- Tabs -->
    <div class="mb-10 flex gap-8 overflow-x-auto border-b border-green-800">
      {
        tabs.map(tab => (
          <button
            data-tab={tab}
            class={`pb-3 text-sm font-semibold tracking-wide transition ${
              tab === activeTab
                ? 'border-b-2 border-green-400 text-green-400'
                : 'text-gray-400 hover:text-green-300'
            }`}
          >
            {tab}
          </button>
        ))
      }
    </div>

    <!-- Tab Panels -->
    <div id="tab-content" class="space-y-10">
      <!-- Default: Skills -->
      <div id="skills-panel" class="panel-fade">
        <!-- Core Technologies -->
        <div>
          <h3 class="mb-4 text-2xl font-bold text-white">{t('about.coreTechnologies')}</h3>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(180px,1fr))] gap-4">
            {
              coreTechnologies.map(tech => (
                <div class="flex flex-col gap-2 rounded-lg border border-green-800 bg-green-900/10 p-4 transition-all hover:border-green-500 hover:bg-green-800/10">
                  <div class="text-2xl text-green-400">
                    <span class="material-symbols-outlined">{tech.icon}</span>
                  </div>
                  <div>
                    <h4 class="text-base font-bold text-white">{tech.title}</h4>
                    <p class="text-sm text-gray-400">{tech.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Tools & Platforms -->
        <div>
          <h3 class="my-4 text-2xl font-bold text-white">{t('about.toolsPlatforms')}</h3>
          <div class="grid grid-cols-[repeat(auto-fit,minmax(180px,1fr))] gap-4">
            {
              toolsPlatforms.map(tool => (
                <div class="flex flex-col gap-2 rounded-lg border border-green-800 bg-green-900/10 p-4 transition-all hover:border-green-500 hover:bg-green-800/10">
                  <div class="text-2xl text-green-400">
                    <span class="material-symbols-outlined">{tool.icon}</span>
                  </div>
                  <div>
                    <h4 class="text-base font-bold text-white">{tool.title}</h4>
                    <p class="text-sm text-gray-400">{tool.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Placeholder for other tabs -->
      <div id="experience-panel" class="panel-fade hidden">
        <ul
          class="relative space-y-6 border-l border-green-500/30 pl-6 text-lg text-gray-300 sm:text-xl"
        >
          {
            experience.map(item => (
              <li class="relative">
                <span class="absolute -left-[10px] top-2 size-3 rounded-full bg-green-400 shadow-[0_0_8px_#00FF80]" />
                <div class="ml-2 flex items-baseline justify-between">
                  <strong>{item.role}</strong>
                  <span class="text-sm text-gray-400">({item.period})</span>
                </div>
                <p>{item.description}</p>
              </li>
            ))
          }
        </ul>
      </div>

      <div id="interests-panel" class="panel-fade hidden">
        <p class="text-gray-300">{t('about.interestsText')}</p>
      </div>
    </div>
  </div>

  <!-- Divider -->
  <div
    class="absolute left-0 top-0 h-[2px] w-full bg-gradient-to-r from-transparent via-green-500 to-transparent opacity-40"
  >
  </div>

  <!-- Interactivity Script -->
  <script is:inline define:vars={{ tabs }}>
    const allTabs = tabs;
    const tabButtons = document.querySelectorAll('[data-tab]');
    const panels = {
      [allTabs[0]]: document.getElementById('skills-panel'),
      [allTabs[1]]: document.getElementById('experience-panel'),
      [allTabs[2]]: document.getElementById('interests-panel'),
    };

    // Restore from localStorage
    let activeTab = localStorage.getItem('activeAboutTab') || allTabs[0];
    updateTabs(activeTab);

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedTab = button.getAttribute('data-tab');
        if (selectedTab === activeTab) return;

        activeTab = selectedTab;
        localStorage.setItem('activeAboutTab', activeTab);
        updateTabs(activeTab);
      });
    });

    function updateTabs(tab) {
      tabButtons.forEach(btn => {
        const isActive = btn.getAttribute('data-tab') === tab;
        btn.classList.toggle('text-green-400', isActive);
        btn.classList.toggle('text-gray-400', !isActive);
        btn.classList.toggle('border-b-2', isActive);
        btn.classList.toggle('border-green-400', isActive);
      });

      Object.entries(panels).forEach(([name, panel]) => {
        if (!panel) return;
        panel.classList.toggle('hidden', name !== tab);
        if (name === tab) {
          panel.classList.add('panel-fade');
          // reset animation each time
          panel.style.animation = 'none';
          panel.offsetHeight; // force reflow
          panel.style.animation = null;
        }
      });
    }
  </script>
</section>

<style is:global>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .panel-fade {
    animation: fade-in 0.6s ease-out both;
  }
</style>
