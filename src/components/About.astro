<section
  id="about"
  aria-labelledby="about-title"
  class="relative min-h-[90vh] w-full overflow-hidden bg-black py-20 text-white"
>
  <div
    class="container mx-auto flex h-full flex-col items-center justify-center gap-12 px-6 lg:flex-row"
  >
    <!-- Left Column: Image -->
    <div class="animate-fade-in-left group relative shrink-0" data-testid="about-image-container">
      <div
        class="absolute -inset-1 rounded-full bg-green-400 opacity-75 blur-xl transition duration-500 group-hover:opacity-100"
      >
      </div>
      <div class="relative">
        <img
          src="/me.jpg"
          alt="Portrait of Juan Almeida"
          width="288"
          height="288"
          class="relative size-72 rounded-full border-2 border-green-400 object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>
    </div>

    <!-- Right Column: Text Content -->
    <div
      class="animate-fade-in-right max-w-2xl text-center lg:text-left"
      data-testid="about-text-container"
    >
      <h2 id="about-title" class="mb-6 text-4xl font-bold tracking-wide text-green-400">
        About Me
      </h2>
      <p class="mb-6 text-lg text-gray-300">
        Iâ€™m Juan Almeida, a Full Stack Engineer passionate about crafting modern, accessible, and
        performant web experiences. I enjoy combining creativity and technology to build products
        that make an impact. My recent work includes React, Astro, Django, and AI-assisted
        development workflows.
      </p>

      <h3 class="mb-4 text-2xl font-semibold text-green-300">Core Technologies</h3>
      <ul class="flex flex-wrap justify-center gap-3 text-sm lg:justify-start">
        {
          [
            'JavaScript / TypeScript',
            'React / Next.js / Astro',
            'Python / Django',
            'Functional Programming',
            'Accessibility / SEO',
          ].map(tech => (
            <li class="rounded-md bg-gray-800/50 px-3 py-1 font-mono text-green-400 ring-1 ring-green-900">
              {tech}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-left {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Use classes for animation to allow control via JS if needed */
  .animate-fade-in-left {
    animation: fade-in-left 1s ease-out forwards;
    /* Add Intersection Observer logic here if you want animations on scroll */
  }

  .animate-fade-in-right {
    animation: fade-in-right 1s ease-out forwards;
    animation-delay: 0.2s; /* Stagger the animation */
  }

  /* Ensure container is centered in the viewport */
  .container {
    display: flex;
    align-items: center;
  }
</style>
